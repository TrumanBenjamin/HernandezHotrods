<main>
  <!-- Home: Video Hero -->
  <section class="hero home-hero" aria-label="Hero video with logo">
    <div class="hero-top">
      <video id="homeHeroVideo" class="hero-video" autoplay muted loop playsinline preload="metadata">
        <source src="/media/chevelle.mp4" type="video/mp4" />
      </video>
      <div class="hero-scrim" aria-hidden="true"></div>

      <!-- Centered logo inside the 80vh area -->
      <div class="hero-overlay">
        <img
          id="heroLogoBox"
          class="hero-logo"
          src="/images/logo/hhrlogot-old.png"
          alt="Hernandez Hot Rods & Customs"
        />
      </div>

      <!-- Scroll cue (sits at bottom of hero and hides after scroll) -->
      <button class="scroll-cue" type="button" aria-label="Scroll to content">
        <span class="scroll-cue__icon" aria-hidden="true">
          <svg viewBox="0 0 24 24" width="26" height="26" focusable="false">
            <path d="M6 14l6-6 6 6"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"/>
          </svg>
        </span>

        <span class="scroll-cue__text">SCROLL</span>
      </button>

    </div>
  </section>



  <!-- Spacer so content scrolls over the fixed hero, like the build pages -->
  <div class="home-hero-spacer"></div>

    <div class="btp" id="homeContentStart">
      <img src="/images/logo/builttoperform.png" alt="">
    </div>
  </section>


  <div class="btp-block"><span></span></div>
  <!-- Band A: color left, info left -->
  <section class="band band--left band--first">
    <div class="band-inner">
      <div class="band-info">
        <h2 class="band-title">About Us</h2>
        <p class="band-text">Located in Rexburg, ID...</p>
      </div>
      <div class="band-media">
        <div class="band-media-inner">
          <img src="/images/about-us.jpg" alt="About Hernandez Hot Rods" />
        </div>
      </div>
    </div>
  </section>

  <!-- Band B: color right, info right -->
  <section class="band band--right">
    <div class="band-inner" data-animate>
      <div class="band-media">
        <div class="band-media-inner">
          <img src="/images/team.jpg" alt="Team" />
        </div>
      </div>  
      <div class="band-info">
        <h2 class="band-title">Builds</h2>
        <p class="band-text">We've had the opportunity to build some incredible vehicles over the years. We are proud of the work that we do
          and love to show it off. We feature both current and completed builds here, with photos of progress along the way. Check it out! </p>
        <a href="/builds" class="btn-send btn-builds"><span>View Builds</span></a>
      </div>
      
    </div>
  </section>

  <section class="social-feed" aria-label="Instagram feed" data-animate>
    <div class="social-inner"> 
      <header class="social-head"> 
        <h2 class="social-title">Check out <br>our Instagram</h2>
        <div class="social-header-bar"></div>
        <a class="ig-button" href="https://www.instagram.com/hernandezhotrods/" target="_blank" rel="noopener"><span>Follow us</span></a>
      </header>

      <div class="social-grid" data-animate>
        <% (igPosts || []).forEach(p => { 
            let fullCap = (p.caption || '').replace(/\s+/g, ' ').trim();

            const maxChars = 260; // tweak if you want more/less text

            if (fullCap.length > maxChars) {
              const cutAt = fullCap.lastIndexOf(' ', maxChars);
              fullCap = fullCap.slice(0, cutAt > 0 ? cutAt : maxChars).trim() + '…';
            }

            const captionSafe = fullCap;
        %>
          <a
            class="social-card <%= p.mediaType === 'VIDEO' ? 'social-card--video' : '' %>"
            href="<%= p.permalink %>"
            target="_blank"
            rel="noopener"
            aria-label="<%= captionSafe || 'Open Instagram post' %>"
          >
            <% if (p.mediaType === 'VIDEO' && p.videoUrl) { %>
              <video
                class="social-card-media"
                preload="metadata"
                muted
                playsinline
                poster="<%= p.image %>"
              >
                <source src="<%= p.videoUrl %>" type="video/mp4" />
              </video>
            <% } else { %>
              <img
                class="social-card-media"
                src="<%= p.image %>"
                alt="<%= captionSafe || 'Instagram image' %>"
              />
            <% } %>

            <div class="social-card-overlay">
              <p class="social-caption">
                <%= captionSafe || 'View on Instagram' %>
              </p>
              
            </div>
          </a>
        <% }) %>

        <% if (!igPosts || igPosts.length === 0) { %>
          <p class="social-empty">No posts to display right now.</p>
        <% } %>
      </div>
    </div>
  </section>

    <!-- Band A: color left, info left -->
  <section class="band band--left" data-animate>
    <div class="band-inner">
      <div class="band-info">
        <h2 class="band-title">Meet Our Team</h2>
        <p class="band-text">In this industry, the team matters most.</p>
        <a href="/team" class="btn-send"><span>View Team</span></a>
      </div>
      <div class="band-media">
        <div class="band-media-inner">
          <img src="/images/team.jpg" alt="Team" />
        </div>
