<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title><%= title || 'Contact Us' %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- CSS -->
  <link rel="stylesheet" href="/css/style.css">

  <!-- Fonts (Optional) -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
</head>

<body>
  <!-- Include Site Header -->
  <%- include('../partials/header') %>

  <div class="container contact-page">
    <h1><%= title || 'Contact Us' %></h1>

    <% if (errors && errors.length > 0) { %>
      <ul class="form-errors">
        <% errors.forEach(error => { %>
          <li><%= error %></li>
        <% }) %>
      </ul>
    <% } %>

    <% if (success) { %>
      <p class="form-success"><%= success %></p>
    <% } %>

    <form action="/contact" method="POST" novalidate class="contact-form">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" value="<%= formData.name || '' %>" required minlength="2" />

      <label for="email">Email:</label>
      <input type="email" id="email" name="email" value="<%= formData.email || '' %>" required />

      <label for="subject">Subject:</label>
      <input type="text" id="subject" name="subject" value="<%= formData.subject || '' %>" required minlength="3" />

      <label for="message">Message:</label>
      <textarea id="message" name="message" required minlength="10"><%= formData.message || '' %></textarea>

      <button type="submit">Send Message</button>
    </form>
  </div>

  <!-- Include Site Footer -->
  <%- include('../partials/footer') %>

  <!-- JavaScript -->
  <script src="/js/main.js"></script>
</body>
</html>
