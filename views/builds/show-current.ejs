
<main class="show-current">
  <!-- Full-page hero + sticky title (reused) -->
  <%- include('../partials/build_hero') %>

  <!-- Compact info block -->
  <div class="btp-block"><span></span></div> 
  <div class="wip-section">
    <section class="wip-intro container" data-animate>
      <h2 class="wip-heading">About this build</h2>
      <p class="wip-paragraph"> 
        <%= build.subtitle || `Weâ€™re bringing ${build.name} up to modern reliability and performance while keeping its original character.` %>
      </p>

      <% if (build.plans) { %>
        <h3 class="wip-subheading">Plan</h3>
        <p class="wip-paragraph"><%= build.plans %></p>
      <% } %>
    </section>

    
  
    <section class="gallery-grid">
      <% extraPhotos.forEach((p, i) => { %>
        <% if (i % 4 === 0) { %>
          <section class="gallery-row"><!-- start row -->
        <% } %>

        <figure class="gallery-item" data-animate>
          <% const base = p.url; %>
          <img
            class="lazy"
            src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///ywAAAAAAQABAAACAUwAOw=="
            data-src="/img/800/70<%= base %>"
            data-srcset="
              /img/400/65<%= base %> 400w,
              /img/800/70<%= base %> 800w,
              /img/1200/70<%= base %> 1200w,
              /img/1600/70<%= base %> 1600w"
            sizes="(max-width: 600px) 100vw, (max-width: 1200px) 50vw, 33vw"
            alt="<%= p.alt || (build.name + ' photo') %>"
            loading="lazy"
            decoding="async"
            fetchpriority="low">
        </figure>

        <% if (i % 4 === 3 || i === extraPhotos.length - 1) { %>
          </section><!-- end row -->
        <% } %>
      <% }) %>
    </section>
    
    <%- include('../partials/startbuild') %>
  </div>  
</main>

